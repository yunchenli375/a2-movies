BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        size_hint_x: 0.3
        orientation: 'vertical'
        Label:
            text: 'Sort by:'
        Spinner:
            values: app.sort_fields
            text_autoupdate: True
            on_text: app.handle_sort_key_selection(self.text)
        Label:
            text: 'Add New Movie...'
        Label:
            text: 'Title:'
        TextInput:
            id: input_title
            text: ''
            write_tab: False
        Label:
            text: 'Category:'
        TextInput:
            id: input_category
            text: ''
            write_tab: False
        Label:
            text: 'Year'
        TextInput:
            id: input_year
            text: ''
            write_tab: False
        Button:
            text: 'Add Movie'
            on_press: app.handle_add()
        Button:
            text: 'Clear'
            on_press: app.handle_clear()
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: app.statistics_text
            size_hint_y: 0.1
        BoxLayout:
            orientation: 'vertical'
            id: container
        Label:
            text: app.state_text
            size_hint_y: 0.1

